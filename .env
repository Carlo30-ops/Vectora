# LocalPDF v5 - Environment Configuration

# Rutas de software externo
TESSERACT_PATH=C:\Program Files\Tesseract-OCR\tesseract.exe
POPPLER_PATH=C:\Program Files\poppler-25.12.0\Library\bin

# Configuración de OCR
TESSERACT_LANG=spa+eng
OCR_DPI=300

# Configuración de conversión
PDF_TO_IMAGE_DPI=300
IMAGE_FORMAT=PNG
WORD_CONVERSION_AVAILABLE=True

# Configuración de compresión
DEFAULT_COMPRESSION_QUALITY=medium

# Directorios
TEMP_DIR=./temp
OUTPUT_DIR=./output

# Límites
MAX_FILE_SIZE_MB=100
MAX_BATCH_FILES=50
